<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    tools:context=".Main2Activity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/BMICalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bmi_calculator"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"/>
    <RadioGroup
        android:id="@+id/pilihGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMICalc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >


        <RadioButton
            android:id="@+id/pilihMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/male"
            android:layout_marginRight="10dp"
            android:text="Laki Laki"
            android:checked="false"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:textColor="@android:color/transparent" />

        <RadioButton
            android:id="@+id/pilihFemale"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="10dp"
            android:text="Perempuan"
            android:background="@drawable/female"
            android:gravity="center"
            android:checked="true"
            android:button="@android:color/transparent"
            android:textColor="@android:color/transparent"/>
    </RadioGroup>

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="cm"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilihGender" />
    <TextView
        android:id="@+id/ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ft"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/pilihGender"
        app:layout_constraintLeft_toRightOf="@id/cm"
        android:textColor="@color/ideal"
        />
    <Button
        android:id="@+id/kurangTinggi"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:onClick="krgTinggi"
        android:background="@drawable/minusbtn"
        app:layout_constraintLeft_toRightOf="@+id/ft"
        app:layout_constraintTop_toBottomOf="@+id/pilihGender"
        />

    <EditText
        android:id="@+id/inputTinggi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_text"
        android:text="0"
        android:paddingLeft="10dp"
        android:textColor="@color/ideal"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/ft"
        app:layout_constraintTop_toBottomOf="@+id/pilihGender" />
    <Button
        android:id="@+id/tambahTinggi"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:onClick="tmbTinggi"
        android:background="@drawable/plusbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilihGender"
        />

    <TextView
        android:id="@+id/kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/kg"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cm" />
    <TextView
        android:id="@+id/lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/kg"
        app:layout_constraintTop_toBottomOf="@id/ft"
        android:text="@string/lb"
        android:textSize="25sp"
        android:textColor="@color/ideal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/kurangBerat"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:onClick="krgBerat"
        android:background="@drawable/minusbtn"
        app:layout_constraintLeft_toRightOf="@+id/lb"
        app:layout_constraintTop_toBottomOf="@+id/kurangTinggi"
        />

    <EditText
        android:id="@+id/inputBerat"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_text"
        android:paddingLeft="15dp"
        android:text="0"
        android:textColor="@color/ideal"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lb"
        app:layout_constraintTop_toBottomOf="@+id/inputTinggi" />
    <Button
        android:id="@+id/tambahBerat"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:onClick="tmbBerat"
        android:background="@drawable/plusbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tambahTinggi"
        />

    <TextView
        android:id="@+id/labelUmur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="age"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kg" />
    <Button
        android:id="@+id/kurangUmur"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:onClick="krgUmur"
        android:background="@drawable/minusbtn"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/labelUmur"
        app:layout_constraintTop_toBottomOf="@+id/kurangBerat" />

    <EditText
        android:id="@+id/inputUmur"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_text"
        android:paddingLeft="15dp"
        android:text="0"
        android:textColor="@color/ideal"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/kurangUmur"
        app:layout_constraintStart_toEndOf="@+id/labelUmur"
        app:layout_constraintTop_toBottomOf="@+id/inputBerat" />
    <Button
        android:id="@+id/tambahUmur"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:onClick="tmbUmur"
        android:background="@drawable/plusbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tambahBerat"
        />
    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:onClick="calculateBMI"
        android:background="@drawable/calculate_btn"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/pilihGender"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>